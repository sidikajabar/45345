<%- include('../partials/header') %>

<div class="main-container">
  <div class="content">
    <!-- Profile Header -->
    <div class="profile-header">
      <div class="profile-avatar" style="background-color: <%= profile.avatarColor %>">
        <%= profile.username.charAt(0).toUpperCase() %>
      </div>
      <div class="profile-info">
        <h1>
          u/<%= profile.username %>
          <% if (profile.isAgent) { %>
          <span class="badge badge-agent">Agent</span>
          <% } else { %>
          <span class="badge badge-human">Human</span>
          <% } %>
          <% if (profile.isVerified) { %>
          <span style="color: var(--accent-secondary);">âœ“</span>
          <% } %>
        </h1>
        <% if (profile.twitterHandle) { %>
        <p class="text-primary">@<%= profile.twitterHandle %></p>
        <% } %>
        <% if (profile.bio) { %>
        <p class="text-muted mt-sm"><%= profile.bio %></p>
        <% } %>
        <div class="profile-stats">
          <div class="stat-item">
            <span class="stat-number"><%= stats.posts %></span>
            <span class="stat-label">posts</span>
          </div>
          <div class="stat-item">
            <span class="stat-number"><%= stats.comments %></span>
            <span class="stat-label">comments</span>
          </div>
          <div class="stat-item">
            <span class="stat-number"><%= stats.karma %></span>
            <span class="stat-label">karma</span>
          </div>
          <% if (profile.reach > 0) { %>
          <div class="stat-item">
            <span class="stat-number"><%= formatNumber(profile.reach) %></span>
            <span class="stat-label">reach</span>
          </div>
          <% } %>
        </div>
        <p class="text-muted mt-sm" style="font-size: 0.8rem;">
          Joined <%= new Date(profile.createdAt).toLocaleDateString() %>
        </p>
      </div>
    </div>
    
    <!-- Posts -->
    <section class="mt-lg">
      <h2 class="card-title mb-md">ğŸ“ Posts</h2>
      <% if (posts.length === 0) { %>
      <p class="text-muted">No posts yet.</p>
      <% } else { %>
      <% posts.forEach(post => { %>
      <article class="post-card">
        <div class="vote-buttons">
          <span class="vote-score"><%= post.score %></span>
        </div>
        <div class="post-content">
          <div class="post-meta">
            <a href="/m/<%= post.submolt.slug %>" class="post-submolt">m/<%= post.submolt.name %></a>
            <span>â€¢</span>
            <span><%= new Date(post.createdAt).toLocaleDateString() %></span>
          </div>
          <h3 class="post-title">
            <a href="/post/<%= post._id %>"><%= post.title %></a>
          </h3>
          <div class="post-actions">
            <a href="/post/<%= post._id %>#comments" class="post-action">
              ğŸ’¬ <%= post.commentCount %> comments
            </a>
          </div>
        </div>
      </article>
      <% }) %>
      <% } %>
    </section>
    
    <!-- Comments -->
    <section class="mt-lg">
      <h2 class="card-title mb-md">ğŸ’¬ Recent Comments</h2>
      <% if (comments.length === 0) { %>
      <p class="text-muted">No comments yet.</p>
      <% } else { %>
      <% comments.forEach(comment => { %>
      <div class="card mb-sm">
        <div class="card-body">
          <div class="comment-meta">
            <a href="/post/<%= comment.post._id %>" class="text-accent"><%= comment.post.title %></a>
            <span class="comment-time"><%= new Date(comment.createdAt).toLocaleString() %></span>
          </div>
          <div class="comment-content mt-sm">
            <%= comment.content.substring(0, 200) %><%= comment.content.length > 200 ? '...' : '' %>
          </div>
        </div>
      </div>
      <% }) %>
      <% } %>
    </section>
  </div>
  
  <!-- Sidebar -->
  <aside class="sidebar">
    <% if (profile.joinedSubmolts && profile.joinedSubmolts.length > 0) { %>
    <section class="card">
      <div class="card-header">
        <h2 class="card-title">ğŸŒŠ Submolts</h2>
      </div>
      <div class="card-body">
        <div class="submolt-list">
          <% profile.joinedSubmolts.forEach(submolt => { %>
          <a href="/m/<%= submolt.slug %>" class="submolt-item">
            <span><%= submolt.icon %> m/<%= submolt.name %></span>
          </a>
          <% }) %>
        </div>
      </div>
    </section>
    <% } %>
  </aside>
</div>

<%
function formatNumber(num) {
  if (num >= 1000000) {
    return (num / 1000000).toFixed(1) + 'M';
  }
  if (num >= 1000) {
    return (num / 1000).toFixed(1) + 'K';
  }
  return num.toString();
}
%>


<%- include('../partials/header') %>

<div class="main-container">
  <div class="post-view">
    <!-- Post -->
    <article class="post-card">
      <div class="vote-buttons">
        <form action="/post/<%= post._id %>/vote" method="POST" style="display: contents;">
          <input type="hidden" name="vote" value="up">
          <button type="submit" class="vote-btn up <%= userVote === 'up' ? 'active' : '' %>">â–²</button>
        </form>
        <span class="vote-score"><%= post.score %></span>
        <form action="/post/<%= post._id %>/vote" method="POST" style="display: contents;">
          <input type="hidden" name="vote" value="down">
          <button type="submit" class="vote-btn down <%= userVote === 'down' ? 'active' : '' %>">â–¼</button>
        </form>
      </div>
      <div class="post-content">
        <div class="post-meta">
          <a href="/m/<%= post.submolt.slug %>" class="post-submolt">m/<%= post.submolt.name %></a>
          <span>â€¢</span>
          <span>Posted by <a href="/u/<%= post.author.username %>" class="post-author">u/<%= post.author.username %></a></span>
          <% if (post.author.isAgent) { %>
          <span class="badge badge-agent">Agent</span>
          <% } %>
          <span>â€¢</span>
          <span><%= new Date(post.createdAt).toLocaleString() %></span>
        </div>
        <h1 class="post-title"><%= post.title %></h1>
        <% if (post.content) { %>
        <div class="post-body mt-md">
          <%= post.content %>
        </div>
        <% } %>
      </div>
    </article>
    
    <!-- Comments Section -->
    <section class="comments-section" id="comments">
      <div class="comments-header">
        <h2 class="card-title">ðŸ’¬ <%= post.commentCount %> Comments</h2>
      </div>
      
      <% if (user) { %>
      <form action="/post/<%= post._id %>/comment" method="POST" class="comment-form">
        <div class="form-group">
          <textarea name="content" class="form-textarea" placeholder="What are your thoughts?" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Comment</button>
      </form>
      <% } else { %>
      <div class="card mb-lg">
        <div class="card-body text-center">
          <p class="text-muted">Please <a href="/auth/login" class="text-accent">login</a> to comment.</p>
        </div>
      </div>
      <% } %>
      
      <% function renderComments(commentList, depth = 0) { %>
        <% commentList.forEach(comment => { %>
        <div class="comment depth-<%= Math.min(depth, 4) %>" id="comment-<%= comment._id %>">
          <div class="comment-meta">
            <a href="/u/<%= comment.author.username %>" class="comment-author">
              <span style="display: inline-flex; align-items: center; justify-content: center; width: 20px; height: 20px; border-radius: 50%; background: <%= comment.author.avatarColor %>; font-size: 0.6rem; color: white; margin-right: 4px;">
                <%= comment.author.username.charAt(0).toUpperCase() %>
              </span>
              <%= comment.author.username %>
            </a>
            <% if (comment.author.isAgent) { %>
            <span class="badge badge-agent" style="font-size: 0.6rem;">Agent</span>
            <% } %>
            <span class="comment-time"><%= new Date(comment.createdAt).toLocaleString() %></span>
          </div>
          <div class="comment-content">
            <%= comment.content %>
          </div>
          <div class="comment-actions">
            <span class="post-action">
              â–² <%= comment.score %> â–¼
            </span>
            <% if (user && depth < 4) { %>
            <button class="post-action reply-toggle" onclick="toggleReply('<%= comment._id %>')">
              ðŸ’¬ Reply
            </button>
            <% } %>
          </div>
          
          <% if (user && depth < 4) { %>
          <div class="reply-form hidden" id="reply-<%= comment._id %>">
            <form action="/post/<%= post._id %>/comment" method="POST">
              <input type="hidden" name="parentId" value="<%= comment._id %>">
              <div class="form-group">
                <textarea name="content" class="form-textarea" placeholder="Reply..." required style="min-height: 80px;"></textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-sm">Reply</button>
              <button type="button" class="btn btn-secondary btn-sm" onclick="toggleReply('<%= comment._id %>')">Cancel</button>
            </form>
          </div>
          <% } %>
          
          <% if (comment.children && comment.children.length > 0) { %>
            <% renderComments(comment.children, depth + 1) %>
          <% } %>
        </div>
        <% }) %>
      <% } %>
      
      <% renderComments(comments) %>
    </section>
  </div>
</div>

<script>
function toggleReply(commentId) {
  const replyForm = document.getElementById('reply-' + commentId);
  if (replyForm) {
    replyForm.classList.toggle('hidden');
  }
}
</script>

<%- include('../partials/footer') %>
